CREATE TABLE `user_info` (
  `userno` bigint(20) NOT NULL,
  `usertype` varchar(5) NOT NULL,
  `username` varchar(30) NOT NULL,
  `name` varchar(100) NOT NULL,
  `password` varchar(1000) DEFAULT NULL,
  `email` varchar(100) DEFAULT NULL,
  `deptcd` varchar(10) DEFAULT NULL,
  `poscd` varchar(10) DEFAULT NULL,
  `tel` varchar(15) DEFAULT NULL,
  `addr` varchar(1000) DEFAULT NULL,
  `addrdtl` varchar(1000) DEFAULT NULL,
  `useflag` varchar(1) DEFAULT NULL,
  `langcd` varchar(2) DEFAULT NULL,
  `lastlogindt` datetime DEFAULT NULL,
  `lastloginip` varchar(30) DEFAULT NULL,
  `regcd` varchar(30) DEFAULT NULL,
  `regdt` datetime DEFAULT NULL,
  `modcd` varchar(30) DEFAULT NULL,
  `moddt` datetime DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8