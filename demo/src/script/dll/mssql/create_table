
CREATE TABLE user_info (
  userno int NOT NULL,
  usertype varchar(5) NOT NULL,
  username nvarchar(30) NOT NULL,
  name nvarchar(100) NOT NULL,
  password varchar(1000),
  email varchar(100),
  deptcd varchar(10),
  poscd varchar(10),
  tel varchar(15),
  addr varchar(1000),
  addrdtl varchar(1000),
  useflag varchar(1),
  langcd varchar(2),
  lastlogindt datetime,
  lastloginip varchar(30),
  regcd varchar(30),
  regdt datetime DEFAULT(GETDATE()),
  modcd varchar(30),
  moddt datetime DEFAULT(GETDATE()),
  CONSTRAINT pk_user_info PRIMARY KEY(userno)
)

CREATE TABLE user_auth (
  username nvarchar(30) NOT NULL,
  authorityname nvarchar(20) NOT NULL
)

CREATE TABLE user_login_hist (
  id int NOT NULL,
  username nvarchar(30) NOT NULL,
  logindt datetime DEFAULT(GETDATE()),
  loginip nvarchar(30) NOT NULL,
  regdt datetime DEFAULT(GETDATE()),
  CONSTRAINT pk_user_login_hist PRIMARY KEY(id)
)

create table menu (	
	menucd nvarchar(50) not null, 
	pmenucd varchar(50), 
	depth varchar(10),
	menunm nvarchar(100),
	urlpath varchar(2000), 
	param varchar(2000), 
	usrtype varchar(100), 
	sortseq int, 
	useflag varchar(1) default('Y'), 
	sts varchar(1) default('C'), 
	regcd varchar(50), 
	regdt datetime DEFAULT(GETDATE()),
	modcd varchar(50), 
	moddt datetime DEFAULT(GETDATE()),
	CONSTRAINT pk_menu PRIMARY KEY(menucd)
) 

create table board (
  bid nvarchar(60) not null,
  cate_cd nvarchar(20) not null,
  title nvarchar(200) not null,
  content text,
  tag varchar(1000),
  view_cnt int default(0),
  reg_cd varchar(45),
  reg_dt datetime DEFAULT(GETDATE()),
  mod_cd varchar(45),
  mod_dt datetime DEFAULT(GETDATE()),
  CONSTRAINT pk_board PRIMARY KEY(bid)
)


		create table tb_lic_cae_user_log_v2(
			id nvarchar(200),
			licserver nvarchar(200),
			modulenm nvarchar(200),
			logintime nvarchar(50),
			logedtime nvarchar(50),
			regdt datetime default(getdate())
		)

   		create table tb_lic_cae_korea_total_amt_v2(
			licserver nvarchar(200),
			modulenm nvarchar(200),
			maxcredit nvarchar(200),
			usage nvarchar(200),
			percentage nvarchar(10),
			logedtime nvarchar(50),
			regdt datetime default(getdate())
		)
		
		create table tb_lic_server_info(
			oid nvarchar(200),
			licserver nvarchar(200),
			licnm nvarchar(200),
			fileurl nvarchar(200),
			filenmtype nvarchar(200),
			useflag nvarchar(1),
			sort int,
			regcd nvarchar(200),			
			regdt datetime default(getdate()),
			modcd nvarchar(200),
			moddt datetime default(getdate())
		)